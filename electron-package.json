{
  "name": "projectpilot-sync",
  "version": "1.0.0",
  "description": "ProjectPilot Sync - אפליקציית ניהול פרויקטים למק",
  "main": "main.js",
  "homepage": "./",
  "build": {
    "appId": "app.projectpilot.sync",
    "productName": "ProjectPilot Sync",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json", 
      "dist/**/*",
      "assets/**/*"
    ],
    "mac": {
      "target": {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      "category": "public.app-category.productivity",
      "identity": null,
      "gatekeeperAssess": false,
      "hardenedRuntime": false,
      "entitlements": null,
      "entitlementsInherit": null,
      "icon": "assets/icon.png",
      "artifactName": "ProjectPilot-Sync-${version}-Mac-${arch}.${ext}"
    },
    "dmg": {
      "title": "ProjectPilot Sync",
      "icon": "assets/icon.png",
      "background": null,
      "window": {
        "width": 600,
        "height": 400
      },
      "contents": [
        {
          "x": 150,
          "y": 200,
          "type": "file"
        },
        {
          "x": 450,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  }
}