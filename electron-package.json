{
  "name": "projectpilot-sync",
  "version": "1.0.0",
  "description": "ProjectPilot Sync - אפליקציית ניהול פרויקטים למק",
  "main": "main.js",
  "homepage": "./",
  "build": {
    "appId": "app.projectpilot.sync",
    "productName": "ProjectPilot Sync",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json", 
      "dist/**/*",
      "assets/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.productivity",
      "identity": null,
      "gatekeeperAssess": false,
      "hardenedRuntime": false,
      "entitlements": null,
      "entitlementsInherit": null,
      "icon": "assets/icon.png",
      "artifactName": "ProjectPilot-Sync-${version}-Mac-${arch}.${ext}",
      "extendInfo": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "folder protocol",
            "CFBundleURLSchemes": ["folder"]
          }
        ]
      }
    },
    "dmg": {
      "title": "ProjectPilot Sync - גרור לתיקיית Applications",
      "icon": "assets/icon.png",
      "iconSize": 100,
      "window": {
        "width": 660,
        "height": 400
      },
      "contents": [
        {
          "x": 180,
          "y": 170,
          "type": "file"
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "backgroundColor": "#f0f0f0"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  }
}